@if(create_recepie_page == true)
{
    <section class="create_recepie">
        <div class="create_recepie_container">

            <div class="reciepie_form">
                <div class="reciepie_form_container">

                    <div class="title">
                        <h2>Create reciepe</h2>
                    </div>

                    <div class="input_container">
                        <label>Reciepe name</label>
                        <input placeholder="Name"/>
                    </div>

                    <div class="input_container">
                        <label>Description</label>
                        <textarea placeholder="Short overall description"></textarea>
                    </div>

                    <div class="input_container">
                        <label>Rate how you liked it</label>
                        <input placeholder="From 1-10"/>
                    </div>

                    <div class="ingredients">
                        <div class="title">
                            <h3>Ingredients</h3>
                        </div>

                        <div class="ingredient">
                            <div class="input_container">
                                <label>Name</label>
                                <input placeholder="Ex beef/salt" />
                            </div>

                            <div class="input_container">
                                <label>Ammount</label>
                                <input placeholder="Ex 250/1" />
                            </div>

                            <div class="input_container">
                                <label>Ammount Name</label>
                                <input placeholder="Ex grams/spoons" />
                            </div>
                        </div>

                        <div class="button_container">
                            <button>Add next</button>
                        </div>
                    </div>

                    <div class="creation_process">
                        <div class="title">
                            <h3>Explain creation process</h3>
                        </div>

                        <div class="creation_process_container">

                            <div class="step">
                                <h4>Step 1</h4>

                                <div class="input_time">
                                    <div class="input_container">
                                        <label>Time</label>
                                        <input />
                                    </div>

                                    <div class="input_container">
                                        <label>Time name(Ex min/hrs)</label>
                                        <input />
                                    </div>
                                </div>

                                <div class="input_container">
                                    <label>Description</label>
                                    <textarea placeholder="Step 1 description"></textarea>
                                </div>
                                <div class="button_container">
                                    <button>Add next step</button>
                                </div>
                            </div>

                        </div>
                    </div>


                    <div class="add_images">

                        <div class="image_input">
                            <div class="input_container">
                                <label>Path</label>
                                <input />
                            </div>

                            <div class="input_container">
                                <label>Name</label>
                                <input />
                            </div>

                            <div class="preview">
                                <img src="https://images.pexels.com/photos/1633578/pexels-photo-1633578.jpeg?auto=compress&cs=tinysrgb&dpr=3&h=750&w=1260" />
                            </div>


                        </div>
                        <div class="button_container">
                            <button>Add Next</button>
                        </div>

                    </div>

                </div>
            </div>

        </div>
    </section>
